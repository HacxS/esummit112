<style>

.alert{
  position: absolute;
  top: 129px;

z-index: 99;

left: 12%;
}

@media (max-width: 500px) {
  #mess{
    left: 12%;
    height: 64px;
  }
}

</style>
<% if(typeof errors != 'undefined'){ %> <% errors.forEach(function(error) { %>
<div id="mess" class="alert alert-warning alert-dismissible fade show" role="alert" style="width: 75%;margin: 10px auto;height: 50px;">
  <%= error.msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close" >
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% }); %> <% } %> <% if(success_msg != ''){ %>
<div  id="mess" class="alert alert-success alert-dismissible fade show" role="alert" style="width: 75%;margin: 10px auto;height: 50px;">
  <%= success_msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <% if(error_msg != ''){ %>
<div id="mess" class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 75%;margin: 10px auto;height: 50px;">
  <%= error_msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> <% if(error != ''){ %>
<div id="mess" class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 75%;margin: 10px auto;height: 50px;">
  <%= error %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>
